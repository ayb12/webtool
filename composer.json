{
  "name": "fnbr/webtool",
  "description": "FrameNet Brasil Web Annotation Tool",
  "license": "GPLv3",
  "keywords": [
    "framenet",
    "annotation",
    "frames",
    "constructions"
  ],
  "authors": [
    {
      "name": "Tiago Torrent",
      "email": "tiago.torrent@gmail.com"
    },
    {
      "name": "Ely Matos",
      "email": "admin@ematos.net"
    }
  ],
  "require": {
    "php": "^7.3",
    "aura/session": "^2.1",
    "auth0/auth0-php": "~5.0",
    "beberlei/assert": "dev-master",
    "easyrdf/easyrdf": "*",
    "laravel/lumen-framework": "7.1.4",
    "latte/latte": "2.4.*",
    "ml/json-ld": "~1.0",
    "php-di/php-di": "5.2.*",
    "phpmailer/phpmailer": "~6.0",
    "psr/log": "1.1.x-dev",
    "tymon/jwt-auth": "^1.0"
  },
  "require-dev": {
    "fzaninotto/faker": "^1.9.1",
    "mockery/mockery": "^1.3.1",
    "phpunit/phpunit": "^8.5"
  },
  "autoload": {
    "files": [
      "core/classes/functions.php",
      "api/app/Manager/helpers.php"
    ],
    "psr-4": {
      "database\\": "core/classes/database/",
      "App\\": "api/app/",
      "fnbr\\": "apps/webtool/",
      "fnbr\\auth\\": "apps/webtool/modules/auth/"
    },
    "classmap": [
      "api/database/seeds",
      "api/database/factories",
      "core/classes/manager.php",
      "core/classes/interfaces",
      "core/classes/database",
      "core/classes/services",
      "core/classes/mvc",
      "core/classes/results",
      "core/classes/persistence",
      "core/classes/security",
      "core/classes/types",
      "core/classes/ui",
      "core/classes/utils"
    ]
  },
  "autoload-dev": {
    "classmap": [
      "api/tests/"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-autoload-dump": [
      "Manager::postAutoloadDump",
      "Manager::createFileMap"
    ]
  }
}
